<main class="container mt-5">
  <h1>Edit User</h1>
  {{#with user}}
  <form id="edit-user-form" method="POST" action="/api/account/{{_id}}">
  <input id="_id" name="_id" type="hidden" value="{{_id}}">
  {{!-- <input id="id" name="id" type="hidden" value="{{id}}"> --}}
  <div class="form-group">
    <label for="username">Username</label>
    <input id="username" name="username" class="form-control" type="text" value="{{username}}">
    <div class="text-danger" id="username-error"></div>
  </div>
  <div class="form-group">
    <label for="email">Email</label>
    <input id="email" name="email" class="form-control" type="email" value="{{email}}">
    <div class="text-danger" id="email-error"></div>
  </div>
  <div class="form-group">
    <label for='bio'>Bio</label>
    <input id="bio" name="bio" class="form-control" type="text" value="{{bio}}">
    <div class="text-danger" id="bio-error"></div>
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit">Save</button>
  </div>
  <div class="form-group">
    <output class="text-danger">{{error}}</output>
  </div>
  </form>
  {{/with}}
</main>