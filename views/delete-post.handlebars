<head>
<meta name="description" content="Deleting the selected post.">
<meta name="keywords" content="Delete, Post">
</head>

<main class="container mt-5">
  {{#with post}}
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/post/">Post</a></li>
      <li class="breadcrumb-item active" aria-current="page">{{title}}</li>
    </ol>
  </nav>



  <div class="col-md-6">
    <div class="card mb-3 px-3">
      <h2 class="card-header pt-2">{{title}}</h2>
      <span class="mb-2 font-weight-bold font-italic">{{body}}</span>

    </div>
  </div>

  <form method="post" action="/api/post/delete/{{_id}}">
    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
      <i class="fas fa-eraser"></i> Delete
    </button>


    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Delete Post</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            Are you sure you want to delete {{title}}?
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-danger delete-post-from-list" data-id="{{_id}}"
              data-name="{{title}}"><i class="fas fa-eraser"></i> Delete</button>
          </div>
        </div>
      </div>
    </div>

  </form>
  {{/with}}

  <script src="/js/jquery-3.5.1.min.js"></script>
  <script src="/js/oboe-browser.min.js"></script>
</main>